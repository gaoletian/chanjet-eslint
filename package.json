{
  "name": "chanjet-rules",
  "version": "1.3.0",
  "private": "true",
  "description": "custom eslint rule and code refacotr utils for chanjet",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna clean && lerna run clean",
    "build": "lerna run build --ignore=chanjet-eslint-report",
    "watch": "lerna run watch",
    "test": "jest --runInBand",
    "cover": "jest --runInBand --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "release": "node -r esm scripts/release.js",
    "ci:publish": "node -r esm scripts/publish-to-cnpm.js",
    "changelog": "node -r esm ./scripts/changelog.js",
    "pretest": "yarn build"
  },
  "gitHooks": {
    "commit-msg": "node -r esm scripts/verifyCommit.js"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.10",
    "@types/fs-extra": "^9.0.11",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "enquirer": "^2.3.6",
    "eslint": "^7.26.0",
    "esm": "^3.2.25",
    "execa": "^5.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "ts-jest": "^29.0.5",
    "typescript": "~5.0.2",
    "yorkie": "^2.0.0",
    "lerna": "^4.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "license": "ISC"
}
